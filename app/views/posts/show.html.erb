<h1><%= @post.title %></h1>

<p>Author: <em><%= @post.author %></em></p>

<p><%= @post.body %></p>

<% if @post.comments %>
  <h3>Comments: </h3>
    <% @post.comments.each do |comment| %>
    <div class="comment">
      <p><%= comment.body %></p>
      <p><%= comment.user.username %></p>
    </div>

    <% end %>
<% end %>
<%= render 'comments/form' %>
