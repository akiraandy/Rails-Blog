<h1><%= @post.title %></h1>

<h3><%= @post.author %></h3>

<p><%= @post.body %></p>

<% if @post.comments %>
  <h3>Comments: </h3>
    <% @post.comments.each do |comment| %>
    <div class="comment">
      <p><%= comment.body %></p>
      <p><%= comment.user.username %></p>
    </div>

    <% end %>
<% end %>

<h4>Add a comment:</h4>
<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:
    </h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for([@post, @post.comments.build]) do |f| %>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
